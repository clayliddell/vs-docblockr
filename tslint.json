{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "completed-docs": true,
        "cyclomatic-complexity": true,
        "jsdoc-format": true,
        "indent": [true, "spaces", 2],
        "semicolon": [true, "always"],
        "quotemark": [true, "single"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "rulesDirectory": []
}
