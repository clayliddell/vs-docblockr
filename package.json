{
  "name": "vs-docblock",
  "displayName": "DocBlockr",
  "description": "Manages doc blocks with visual studio code",
  "version": "0.0.1",
  "publisher": "jeremyljackson",
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:php"
  ],
  "main": "./out/src/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.init",
        "title": "DocBlockr - Parse"
      }
    ],
    "configuration": [
      {
        "title": "Column spacing",
        "properties": {
          "docblockr.columnSpacing": {
            "type": "number",
            "default": 2,
            "description": "Minimum number of spaces between columns"
          }
        }
      },
      {
        "title": "Default return type",
        "properties": {
          "docblockr.defaultReturnTag": {
            "type": "boolean",
            "default": true,
            "description": "Whether or not to display a return tag"
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.1.4",
    "xregexp": "^3.2.0"
  },
  "dependencies": {
    "pug-lexer": "https://github.com/jeremyvii/pug-lexer/tarball/vs-docblockr",
    "tsc": "^1.20150623.0"
  }
}
